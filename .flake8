[flake8]
ignore = 
    # We're going to need to ignore this in order for the doxygen double-hash
    # commenting to work out correctly.
    E266
    # We prefer line breaks BEFORE binary operators, because it is clearer.
    W503
    # Over-indentations are easier to read!
    # From https://pep8.org/#indentation, we can:
    # "# Add some extra indentation on the conditional continuation line."
    E127, E126
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    doc,
max-complexity = 15

#
# Modifications for Automated Linting
#
# It might be useful to count the errors for a future where linting is
# automated, but we allow some percentage or other rubric to pass.
count = True
# Statistics may also be useful to track what passes and what does not.
statistics = True

format = pylint
